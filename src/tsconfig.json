{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "dist" ],
  "files": [ "src/app.ts" ] // Explicitly include app.ts as a root file
}